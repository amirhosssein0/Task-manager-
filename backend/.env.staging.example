# ==========================
# Django Core Settings (STAGING)
# ==========================
DJANGO_SECRET_KEY=change-me-staging-secret
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=staging.your-domain.com
DJANGO_ENV=staging


# ==========================
# CORS / CSRF (comma-separated)
# ==========================
CORS_ALLOWED_ORIGINS=https://staging-frontend.your-domain.com
CSRF_TRUSTED_ORIGINS=https://staging-frontend.your-domain.com

# ==========================
# JWT Token Lifetimes
# ==========================
ACCESS_TOKEN_MINUTES=60
ACCESS_TOKEN_HOURS=1
REFRESH_TOKEN_DAYS=14

# ==========================
# Celery & Redis (STAGING)
# ==========================
CELERY_BROKER_URL=redis://staging-redis.your-domain.internal:6379/0
CELERY_RESULT_BACKEND=redis://staging-redis.your-domain.internal:6379/0

# ==========================
# Overdue Task Notification Time (24-hour format)
# ==========================
OVERDUE_NOTIFY_HOUR=21
OVERDUE_NOTIFY_MINUTE=0

# ==========================
# Database (STAGING)
# ==========================
DB_NAME=task_manager_staging
DB_USER=task_manager_staging
DB_PASSWORD=change-me-staging-db-password
DB_HOST=staging-db.your-domain.internal
DB_PORT=5432

# ==========================
# Billing test card (STAGING)
# ==========================
TEST_CARD_NUMBER=4242424242424242
TEST_CARD_EXP=01/28
TEST_CARD_CVC=123

# ==========================
# SMTP Email Settings (STAGING)
# ==========================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=staging-email@example.com
EMAIL_HOST_PASSWORD=staging-app-password-here
DEFAULT_FROM_EMAIL=staging-email@example.com

# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# ==========================
# Timezone Configuration
# ==========================
DJANGO_TIME_ZONE=Asia/Tehran

# ==========================
# Recurring Tasks Creation Time
# ==========================
RECURRING_TASKS_HOUR=0
RECURRING_TASKS_MINUTE=0