# ==========================
# Django Core Settings (PRODUCTION)
# ==========================
DJANGO_SECRET_KEY=change-me-prod-secret-super-strong
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# ==========================
# CORS / CSRF (comma-separated)
# ==========================
CORS_ALLOWED_ORIGINS=https://app.your-domain.com
CSRF_TRUSTED_ORIGINS=https://app.your-domain.com

# ==========================
# JWT Token Lifetimes
# ==========================
ACCESS_TOKEN_MINUTES=60
ACCESS_TOKEN_HOURS=1
REFRESH_TOKEN_DAYS=14

# ==========================
# Celery & Redis (PROD)
# ==========================
CELERY_BROKER_URL=redis://prod-redis.your-domain.internal:6379/0
CELERY_RESULT_BACKEND=redis://prod-redis.your-domain.internal:6379/0

# ==========================
# Overdue Task Notification Time
# ==========================
OVERDUE_NOTIFY_HOUR=21
OVERDUE_NOTIFY_MINUTE=0

# ==========================
# Database (PROD)
# ==========================
DB_NAME=task_manager_prod
DB_USER=task_manager_prod
DB_PASSWORD=change-me-prod-db-password
DB_HOST=prod-db.your-domain.internal
DB_PORT=5432

# ==========================
# Billing test card (PROD)
# ==========================
# در پروداکشن می‌تونی خالی بذاری یا فقط برای تست sandbox
TEST_CARD_NUMBER=4242424242424242
TEST_CARD_EXP=01/28
TEST_CARD_CVC=123

# ==========================
# SMTP Email Settings (PROD)
# ==========================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=prod-email@example.com
EMAIL_HOST_PASSWORD=prod-app-password-here
DEFAULT_FROM_EMAIL=prod-email@example.com

# ==========================
# Timezone Configuration
# ==========================
DJANGO_TIME_ZONE=Asia/Tehran

# ==========================
# Recurring Tasks Creation Time
# ==========================
RECURRING_TASKS_HOUR=0
RECURRING_TASKS_MINUTE=0